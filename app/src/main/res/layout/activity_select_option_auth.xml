<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRegistro"
    android:fitsSystemWindows="true"
    tools:context="com.example.amachay.includes.SelectOptionAuthActivity">


    <include layout="@layout/action_bar_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:src="@drawable/ic_logo_principal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="Selecciona una opciÃ³n:"
            android:textAlignment="center"
            android:textColor="@color/colorNegro"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btngotologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="YA TENGO CUENTA"

            />

        <Button
            android:id="@+id/btngotoregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="REGISTRARME AHORA"

            />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>